<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easymusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Level"></activity>
        <activity
            android:name=".Info"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".EndGame" />
        <activity
            android:name=".FinalLevel"
            android:screenOrientation="landscape" />
        <activity android:name=".NextLevelMenu" />
        <activity android:name=".GameOver" />
        <activity
            android:name=".PlayLevel"
            android:screenOrientation="landscape" />
        <activity android:name=".LevelMenu" />
        <activity android:name=".Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>